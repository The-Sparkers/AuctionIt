@{
    ViewBag.Title = "Forgot Password Confirmation";
    string email = null;
    if (ViewBag.Email != null)
    {
        string emailId = "umair.tahir@gmail.com";
        int indexOfEmail = emailId.ToCharArray().ToList().IndexOf('@');
        try
        {
            string mid = emailId.Substring(3, indexOfEmail - 3);
            List<char> temp = mid.ToCharArray().ToList();
            for (int i = 0; i < temp.Count; i++)
            {
                temp[i] = '*';
            }
            mid = string.Empty;
            temp.ForEach(x => mid += x);
            email = emailId.Substring(0, 3) + mid + emailId.Substring(indexOfEmail);

        }
        catch (Exception)
        {
            email = emailId;
        }
    }
}

<section class="section novi-bg novi-bg-img section-md bg-default text-center section-top-shadow">
    <div class="container">
        <div class="row align-content-center">
            <div class="col-md-12">
                <h2>@ViewBag.Title</h2>
                <h1><span class="fa fa-send text-primary"></span></h1>
                <p>
                    Please check your email @(email == null ? "" : "(" + email + ")") to reset your password.
                </p>
            </div>
        </div>
    </div>
</section>

