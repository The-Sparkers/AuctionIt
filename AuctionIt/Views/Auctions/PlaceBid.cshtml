@model AuctionIt.ViewModels.AuctionsViewModels.PlaceBidDetailsViewModel
@{ 
    ViewBag.Title = "Place Bid";
}

<section class="section novi-bg novi-bg-img section-md bg-default text-center section-top-shadow">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-9 col-lg-7 col-xl-5">
                <h3>@ViewBag.Title</h3>
                @using (Html.BeginForm("PlaceBid", "Auctions", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "rd-form rd-mailform rd-form-centered", role = "form", novalidate = "novalidate" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m=>m.AuctionId)
                    @Html.ValidationSummary(true, "", new { @class = "text-black" })
                    <div class="form-wrap">
                        @Html.TextBoxFor(m => m.BidPrice, new { @class = "form-input form-control-has-validation", type = "number", @data_constraints = "@Required" })

                        @Html.ValidationMessageFor(m => m.BidPrice, "", new { @class = "form-validation" })
                        @Html.LabelFor(m => m.BidPrice, new { @class = "form-label rd-input-label" })
                    </div>
                    <button class="button button-block button-primary" type="submit">@ViewBag.Title</button>
                    
                }
            </div>
        </div>
    </div>

</section>